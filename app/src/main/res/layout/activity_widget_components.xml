<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="25dp"
    tools:context=".WidgetComponents">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff123"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|fill_vertical"
                    android:gravity="center_horizontal"
                    android:text="Boxing"
                    android:textColor="#000000"
                    android:textSize="40sp" />

                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|fill_vertical"
                    android:gravity="center_horizontal"
                    android:text="KickBoxing"
                    android:textColor="#000000"
                    android:textSize="40sp" />

                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|fill_vertical"
                    android:gravity="center_horizontal"
                    android:text="Judo"
                    android:textColor="#000000"
                    android:textSize="40sp" />

                <CheckBox
                    android:id="@+id/checkBox4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|fill_vertical"
                    android:gravity="center_horizontal"
                    android:text="Aikido"
                    android:textColor="#000000"
                    android:textSize="40sp" />

                <CheckBox
                    android:id="@+id/checkBox5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|fill_vertical"
                    android:gravity="center_horizontal"
                    android:text="Football"
                    android:textColor="#000000"
                    android:textSize="40sp" />

                <CheckBox
                    android:id="@+id/checkBox6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|fill_vertical"
                    android:gravity="center_horizontal"
                    android:text="TaeKwondo"
                    android:textColor="#000000"
                    android:textSize="40sp" />

                <CheckBox
                    android:id="@+id/checkBox7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|fill_vertical"
                    android:gravity="center_horizontal"
                    android:text="Wrestling"
                    android:textColor="#000000"
                    android:textSize="40sp" />

                <CheckBox
                    android:id="@+id/checkBox8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|fill_vertical"
                    android:gravity="center_horizontal"
                    android:text="Swimming"
                    android:textColor="#000000"
                    android:textSize="40sp" />

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:numStars="5" />

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/radioButton1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|fill_vertical"
                        android:text="Android OS"
                        android:textColor="#000000"
                        android:textSize="40sp" />

                    <RadioButton
                        android:id="@+id/radioButton2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|fill_vertical"
                        android:text="iOS"
                        android:textColor="#000000"
                        android:textSize="40sp" />

                    <RadioButton
                        android:id="@+id/radioButton3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|fill_vertical"
                        android:text="Windows Phone OS"
                        android:textColor="#000000"
                        android:textSize="40sp" />
                </RadioGroup>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>